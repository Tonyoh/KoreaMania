    android:background="@drawable/main_background_bright">

       <LinearLayout 
           android:orientation="horizontal"
           android:layout_width="wrap_content" 
           android:layout_height="wrap_content" 
           android:id="@+id/layout1">


    <CheckBox 
        android:checked="true"   
        android:id="@+id/sound_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
       
    <ImageView
        android:layout_toRightOf="@+id/sound_checkbox"
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/speaker2" /> 
        
   <Spinner
    android:id="@+id/languages_spinner"
    android:gravity="right"
    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:entries="@array/LANG"
    android:prompt="@string/LANG_prompt" />
    
</LinearLayout>

       
       
