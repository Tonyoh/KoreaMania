        android:layout_height="wrap_content"  
        android:layout_marginTop="10dp"
    	android:layout_centerInParent="true"
        android:text="@string/translation"
        android:textStyle="bold"
        android:textColor="#CD7F32"
        android:textSize="24sp" />
    
    
           


